# ============================================
# OXYGENFRAMEWORK 2.0 - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and configure for your environment
# Author: Redwan Aouni
# ============================================

# --------------------------------------------
# APPLICATION SETTINGS
# --------------------------------------------
APP_NAME="OxygenFramework"
APP_ENV=local
APP_DEBUG=true
APP_URL=https://oxygenframework.test
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_KEY=

# --------------------------------------------
# DATABASE CONFIGURATION
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=oxygen
DB_USERNAME=root
DB_PASSWORD=

# --------------------------------------------
# TEMPLATE & THEME CONFIGURATION
# --------------------------------------------
DEFAULT_TEMPLATE=default
FORCE_MOBILE_TEMPLATE=false

# --------------------------------------------
# STORAGE CONFIGURATION
# --------------------------------------------
# Options: local, s3
STORAGE_DISK=local

# AWS S3 Configuration (if STORAGE_DISK=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# --------------------------------------------
# MAIL CONFIGURATION
# --------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@oxygenframework.com
MAIL_FROM_NAME="${APP_NAME}"

# --------------------------------------------
# SMS CONFIGURATION (Twilio)
# --------------------------------------------
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# --------------------------------------------
# CACHE CONFIGURATION
# --------------------------------------------
# Options: file, redis, memcached
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --------------------------------------------
# SESSION CONFIGURATION
# --------------------------------------------
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --------------------------------------------
# QUEUE CONFIGURATION
# --------------------------------------------
# Options: sync, database, redis
QUEUE_CONNECTION=sync

# --------------------------------------------
# API KEYS & SERVICES
# --------------------------------------------
# Payment Gateways
STRIPE_KEY=
STRIPE_SECRET=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Social Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --------------------------------------------
# SECURITY SETTINGS
# --------------------------------------------
# Generate with: php oxygen key:generate
APP_KEY=

# CSRF Token Lifetime (minutes)
CSRF_LIFETIME=120

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# --------------------------------------------
# LOGGING
# --------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug

# --------------------------------------------
# BROADCASTING
# --------------------------------------------
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# --------------------------------------------
# WEBSOCKET SERVER
# --------------------------------------------
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8080

# --------------------------------------------
# DEVELOPMENT TOOLS
# --------------------------------------------
# Enable query logging
DB_LOG_QUERIES=false

# Enable debug bar
DEBUG_BAR_ENABLED=false

# --------------------------------------------
# PRODUCTION SETTINGS
# --------------------------------------------
# Set these in production:
# APP_ENV=production
# APP_DEBUG=false
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis
